window = {
	name = "inventory_view"
	size = { 1732 930 }
	layer = bottom # STA
	parentanchor = center

	using = Window_Movable
	using = Window_Background
	using = Window_Decoration_Spike

	datacontext = "[GetVariableSystem]"
	datacontext = "[InventoryView.GetCharacter]"
	datacontext = "[InventoryView.GetCharacter.GetInventory]"

	state = {
		name = _show
		using = Animation_FadeIn_Standard
		# Vanilla Vars
		on_start = "[GetVariableSystem.Clear( 'court_artifacts' )]"
		on_start = "[GetVariableSystem.Clear( 'claims' )]"
		# Modded Vars
		on_start = "[GetVariableSystem.Set( 'artifacts_active_tab', 'personal_artifacts_tab' )]"
		on_start = "[GetVariableSystem.Set( 'operations_active_tab', 'tab_operations_list' )]"
		on_start = "[GetVariableSystem.Set( 'operations_panel_active', 'maintenance_actions_tab' )]"
	}

	state = {
		name = _hide
		using = Animation_FadeOut_Standard
		on_finish = "[AccessLocalPlayerCachedData.AccessNewArtifacts.ClearNewArtifactsOfCategory( 'inventory' )]"
		on_finish = "[AccessLocalPlayerCachedData.AccessNewArtifacts.ClearNewArtifactsOfCategory( 'court' )]"
	}

	## covers the whole window
	vbox = {
		using = Window_Margins

		# top banner, just contains "Inventory"
		header_pattern = {
			layoutpolicy_horizontal = expanding

			## show the portrait of the owner.
			portrait_shoulders = {
				position = { -10 -100 }
				allow_outside = yes
			}

			blockoverride "header_text"
			{
				text = "INVENTORY_TITLE"
			}

			blockoverride "button_close"
			{
				onclick = "[InventoryView.Close]"
			}
		}
		# end of top banner

		## rest of the window not covered by the banner
		hbox = {
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = expanding

